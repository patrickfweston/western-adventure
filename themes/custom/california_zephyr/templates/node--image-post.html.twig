<article class="post">
  <figure class="image image--single image--right">
    <img class="image__image" src="{{ content.field_image|e|striptags|trim }}" />
    <figcaption class="image__caption">
      {{ content.field_image_caption }}
      <br />
      <span class="image__meta">{{ content.field_display_date }}</span>
    </figcaption>
  </figure>
</article>